<body><h2>새로운 곡 추가하기</h2>
<form id="songForm">
    <input type="text" id="title" placeholder="곡 제목" required>
    <input type="text" id="artist" placeholder="아티스트 이름" required>
    <input type="text" id="link" placeholder="유튜브 링크"><h3>세션 선택</h3>
<div>
    <label><input type="checkbox" value="Vocal"> 보컬</label>
    <label><input type="checkbox" value="Guitar1"> 기타1</label>
    <label><input type="checkbox" value="Guitar2"> 기타2</label>
    <label><input type="checkbox" value="Bass"> 베이스</label>
    <label><input type="checkbox" value="Drums"> 드럼</label>
    <label><input type="checkbox" value="Keyboard"> 키보드</label>
    <label><input type="checkbox" value="Etc"> 그 외</label>
</div>

<textarea id="description" placeholder="비고"></textarea>
<button type="submit">등록하기</button>

</form><h2>등록된 곡 목록</h2>
<table id="songTable">
    <thead>
        <tr>
            <th>곡 제목</th>
            <th>아티스트</th>
            <th>유튜브 링크</th>
            <th>세션 지원</th>
            <th>비고</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table><script>
    const SHEET_URL = '<<여기에 Google Apps Script Web App URL을 넣으세요>>';

    const form = document.getElementById('songForm');
    const tableBody = document.querySelector('#songTable tbody');

    const loadSongs = async () => {
        const response = await fetch(SHEET_URL);
        const songs = await response.json();
        songs.forEach(addSongToTable);
    }

    form.addEventListener('submit', async function(event) {
        event.preventDefault();
        const title = document.getElementById('title').value;
        const artist = document.getElementById('artist').value;
        const description = document.getElementById('description').value;
        const link = document.getElementById('link').value;

        const session = Array.from(document.querySelectorAll('input[type="checkbox"]:checked')).map(checkbox => checkbox.value);

        const song = { title, artist, description, link, session, appliedSessions: {} };

        await fetch(SHEET_URL, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(song)
        });

        addSongToTable(song);
        form.reset();
    });

    function addSongToTable({ title, artist, description, link, session, appliedSessions }, index) {
        const row = document.createElement('tr');
        const sessionButtons = session.map(s => `<button onclick="applySession(this, '${s}', ${index})">${s}</button>`).join(' ');

        row.innerHTML = `
            <td>${title}</td>
            <td>${artist}</td>
            <td><a href="${link}" target="_blank">링크</a></td>
            <td>${sessionButtons}<br>
                <input type='text' placeholder='이름 입력' class='nameInput'>
            </td>
            <td>${description}</td>
        `;

        tableBody.appendChild(row);
    }

    window.onload = loadSongs;
</script></body>
</html>
